<!-- About Dialog -->
<dialog
  class="p-0 rounded-lg shadow-xl backdrop:bg-black/50 bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)] w-[400px]"
  data-app-target="aboutDialog"
>
  <div class="p-6 text-[var(--theme-text-primary)]">
    <!-- Close button -->
    <div class="flex justify-end mb-2">
      <button
        type="button"
        data-action="click->app#closeAboutDialog"
        class="p-1 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Logo -->
    <div class="flex justify-center mb-4">
      <svg class="w-32 h-32" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <!-- Frankenstein head icon - larger version -->
        <circle cx="12" cy="12" r="11" fill="#FF6B9D"/>
        <circle cx="12" cy="12" r="11" fill="none" stroke="#FF6B9D" stroke-width="0.5"/>
        <g transform="translate(12, 13)">
          <!-- Head shape -->
          <path d="M-5.5 -5.5 L-5.5 -2.5 Q-5.5 4 0 5 Q5.5 4 5.5 -2.5 L5.5 -5.5 L-5.5 -5.5 Z" fill="#7CB342"/>
          <!-- Flat top -->
          <rect x="-5.5" y="-7" width="11" height="2" rx="0.3" fill="#5D4037"/>
          <!-- Hair tufts -->
          <rect x="-3.5" y="-8.5" width="1" height="2" rx="0.2" fill="#2E2E2E"/>
          <rect x="-0.5" y="-9" width="1" height="2.3" rx="0.2" fill="#2E2E2E"/>
          <rect x="2.5" y="-8.5" width="1" height="2" rx="0.2" fill="#2E2E2E"/>
          <!-- Bolts -->
          <ellipse cx="-6" cy="-1" rx="1" ry="0.6" fill="#888"/>
          <ellipse cx="6" cy="-1" rx="1" ry="0.6" fill="#888"/>
          <!-- Eyes -->
          <ellipse cx="-2.2" cy="-1.5" rx="1.8" ry="2" fill="white"/>
          <circle cx="-2" cy="-1.2" r="0.9" fill="#2D1B4E"/>
          <ellipse cx="2.2" cy="-1.5" rx="1.8" ry="2" fill="white"/>
          <circle cx="2.4" cy="-1.2" r="0.9" fill="#2D1B4E"/>
          <!-- Smile -->
          <path d="M-2 2.8 Q0 4.5 2 2.8" stroke="#444" stroke-width="0.5" stroke-linecap="round" fill="none"/>
        </g>
      </svg>
    </div>

    <!-- App Name -->
    <h2 class="text-xl font-bold text-center mb-2"><%= t('app.name') %></h2>
    <p class="text-sm text-[var(--theme-text-muted)] text-center mb-4">
      <%= t('dialogs.about.description') %>
    </p>

    <!-- Copyright -->
    <p class="text-xs text-[var(--theme-text-faint)] text-center mb-4">
      &copy; <%= Time.current.year %> Fabio Akita. <%= t('dialogs.about.copyright') %>
    </p>

    <!-- GitHub Link -->
    <div class="flex justify-center">
      <a
        href="https://github.com/akitaonrails/FrankMD"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-4 py-2 text-sm rounded-md bg-[var(--theme-bg-tertiary)] hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-secondary)] transition-colors"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
        </svg>
        <%= t('dialogs.about.view_github') %>
      </a>
    </div>
  </div>
</dialog>
