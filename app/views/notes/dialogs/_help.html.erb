<!-- Help Dialog (Markdown Cheatsheet) -->
<dialog
  class="p-0 rounded-lg shadow-xl backdrop:bg-black/50 bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)] max-w-4xl w-full max-h-[85vh]"
  data-app-target="helpDialog"
>
  <div class="p-4 text-[var(--theme-text-primary)] overflow-y-auto">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold"><%= t('dialogs.help.title') %></h3>
      <div class="flex items-center gap-2">
        <span class="text-xs text-[var(--theme-text-muted)]"><%= t('dialogs.help.toggle_hint') %></span>
        <button
          type="button"
          data-action="click->app#closeHelp"
          class="p-1 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <!-- Column 1 -->
      <div class="space-y-3">
        <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
          <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.headings') %></h4>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <code class="font-mono text-[var(--theme-text-secondary)]"># Heading 1</code>
            <span class="text-xl font-bold">Heading 1</span>
            <code class="font-mono text-[var(--theme-text-secondary)]">## Heading 2</code>
            <span class="text-lg font-bold">Heading 2</span>
            <code class="font-mono text-[var(--theme-text-secondary)]">### Heading 3</code>
            <span class="text-base font-bold">Heading 3</span>
          </div>
        </div>

        <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
          <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.emphasis') %></h4>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <code class="font-mono text-[var(--theme-text-secondary)]">**bold**</code>
            <span class="font-bold">bold</span>
            <code class="font-mono text-[var(--theme-text-secondary)]">*italic*</code>
            <span class="italic">italic</span>
            <code class="font-mono text-[var(--theme-text-secondary)]">~~strikethrough~~</code>
            <span class="line-through">strikethrough</span>
            <code class="font-mono text-[var(--theme-text-secondary)]">`inline code`</code>
            <code class="bg-[var(--theme-code-bg)] px-1 rounded text-sm">inline code</code>
          </div>
        </div>

        <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
          <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.lists') %></h4>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <div class="font-mono text-[var(--theme-text-secondary)]">
              <div>- Item 1</div>
              <div>- Item 2</div>
            </div>
            <div>
              <div>&bull; Item 1</div>
              <div>&bull; Item 2</div>
            </div>
            <div class="font-mono text-[var(--theme-text-secondary)]">
              <div>1. First</div>
              <div>2. Second</div>
            </div>
            <div>
              <div>1. First</div>
              <div>2. Second</div>
            </div>
          </div>
        </div>

        <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
          <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.task_list') %></h4>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <div class="font-mono text-[var(--theme-text-secondary)]">
              <div>- [x] Done</div>
              <div>- [ ] Todo</div>
            </div>
            <div>
              <div><input type="checkbox" checked disabled class="mr-1">Done</div>
              <div><input type="checkbox" disabled class="mr-1">Todo</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Column 2 -->
      <div class="space-y-3">
        <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
          <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.links_images') %></h4>
          <div class="space-y-2 text-sm">
            <div class="grid grid-cols-2 gap-2">
              <code class="font-mono text-[var(--theme-text-secondary)]">[text](url)</code>
              <a href="#" class="text-[var(--theme-accent)] underline">text</a>
            </div>
            <div class="grid grid-cols-2 gap-2">
              <code class="font-mono text-[var(--theme-text-secondary)]">![alt](image.jpg)</code>
              <span class="text-[var(--theme-text-muted)]">[image]</span>
            </div>
          </div>
        </div>

        <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
          <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.blockquote') %></h4>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <code class="font-mono text-[var(--theme-text-secondary)]">> Quote text</code>
            <blockquote class="border-l-2 border-[var(--theme-accent)] pl-2 italic text-[var(--theme-text-muted)]">Quote text</blockquote>
          </div>
        </div>

        <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
          <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.code_block') %></h4>
          <div class="text-sm space-y-1">
            <div class="font-mono text-[var(--theme-text-secondary)]">
              <div>```javascript</div>
              <div>const x = 1;</div>
              <div>```</div>
            </div>
            <pre class="bg-[var(--theme-code-bg)] p-2 rounded text-xs"><code>const x = 1;</code></pre>
          </div>
        </div>

        <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
          <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.table') %></h4>
          <div class="text-sm space-y-1">
            <div class="font-mono text-[var(--theme-text-secondary)] text-xs">
              <div>| Col 1 | Col 2 |</div>
              <div>| ----- | ----- |</div>
              <div>| A     | B     |</div>
            </div>
            <table class="text-xs border-collapse">
              <tr><th class="border border-[var(--theme-border)] px-2">Col 1</th><th class="border border-[var(--theme-border)] px-2">Col 2</th></tr>
              <tr><td class="border border-[var(--theme-border)] px-2">A</td><td class="border border-[var(--theme-border)] px-2">B</td></tr>
            </table>
          </div>
        </div>

        <div class="bg-[var(--theme-bg-tertiary)] rounded-lg p-3">
          <h4 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase mb-2"><%= t('dialogs.help.horizontal_rule') %></h4>
          <div class="grid grid-cols-2 gap-2 text-sm items-center">
            <code class="font-mono text-[var(--theme-text-secondary)]">---</code>
            <hr class="border-[var(--theme-border)]">
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4 pt-3 border-t border-[var(--theme-border)] text-xs text-[var(--theme-text-muted)] text-center">
      <span class="font-semibold"><%= t('dialogs.help.keyboard_shortcuts') %></span>
      <%= t('dialogs.help.shortcuts_list') %>
    </div>
  </div>
</dialog>
