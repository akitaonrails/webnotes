<header class="flex-none h-12 border-b border-[var(--theme-border)] flex items-center justify-between px-4 bg-[var(--theme-bg-secondary)]">
  <div class="flex items-center gap-2">
    <!-- Sidebar Toggle (Burger Menu) -->
    <button
      type="button"
      data-action="click->app#toggleSidebar"
      data-app-target="sidebarToggle"
      class="p-1.5 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
      title="<%= t('header.toggle_explorer') %>"
      aria-expanded="true"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    <button
      type="button"
      data-action="click->app#openAboutDialog"
      class="flex items-center gap-2 p-1 rounded hover:bg-[var(--theme-bg-hover)] transition-colors"
      title="<%= t('header.about_app') %>"
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <!-- Frankenstein head icon - simplified for small size -->
        <circle cx="12" cy="12" r="11" fill="#2D1B4E"/>
        <circle cx="12" cy="12" r="11" fill="none" stroke="#FF6B9D" stroke-width="0.8"/>
        <g transform="translate(12, 13)">
          <!-- Head shape -->
          <path d="M-5.5 -5.5 L-5.5 -2.5 Q-5.5 4 0 5 Q5.5 4 5.5 -2.5 L5.5 -5.5 L-5.5 -5.5 Z" fill="#7CB342"/>
          <!-- Flat top -->
          <rect x="-5.5" y="-7" width="11" height="2" rx="0.3" fill="#5D4037"/>
          <!-- Hair tufts -->
          <rect x="-3.5" y="-8.5" width="1" height="2" rx="0.2" fill="#2E2E2E"/>
          <rect x="-0.5" y="-9" width="1" height="2.3" rx="0.2" fill="#2E2E2E"/>
          <rect x="2.5" y="-8.5" width="1" height="2" rx="0.2" fill="#2E2E2E"/>
          <!-- Bolts -->
          <ellipse cx="-6" cy="-1" rx="1" ry="0.6" fill="#888"/>
          <ellipse cx="6" cy="-1" rx="1" ry="0.6" fill="#888"/>
          <!-- Eyes -->
          <ellipse cx="-2.2" cy="-1.5" rx="1.8" ry="2" fill="white"/>
          <circle cx="-2" cy="-1.2" r="0.9" fill="#2D1B4E"/>
          <ellipse cx="2.2" cy="-1.5" rx="1.8" ry="2" fill="white"/>
          <circle cx="2.4" cy="-1.2" r="0.9" fill="#2D1B4E"/>
          <!-- Smile -->
          <path d="M-2 2.8 Q0 4.5 2 2.8" stroke="#444" stroke-width="0.5" stroke-linecap="round" fill="none"/>
        </g>
      </svg>
      <span class="font-semibold text-sm"><%= t('app.name') %></span>
    </button>
  </div>
  <div class="flex items-center gap-2">
    <button
      type="button"
      data-action="click->app#toggleTypewriterMode"
      data-typewriter-mode-btn
      class="p-1.5 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
      title="<%= t('header.toggle_typewriter') %>"
      aria-pressed="false"
    >
      <!-- Typewriter icon -->
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <rect x="3" y="14" width="18" height="7" rx="1" />
        <rect x="5" y="7" width="14" height="7" rx="1" />
        <circle cx="8" cy="17" r="1" fill="currentColor" />
        <circle cx="12" cy="17" r="1" fill="currentColor" />
        <circle cx="16" cy="17" r="1" fill="currentColor" />
        <path d="M9 4h6" stroke-linecap="round" />
        <path d="M12 4v3" stroke-linecap="round" />
      </svg>
    </button>
    <button
      type="button"
      data-action="click->app#togglePreview"
      data-app-target="previewToggle"
      class="p-1.5 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
      title="<%= t('header.toggle_preview') %>"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
    </button>
    <!-- Theme Picker -->
    <div class="relative" data-controller="theme" data-theme-initial-value="<%= @config&.dig(:settings, 'theme') %>">
      <button
        type="button"
        data-action="click->theme#toggle"
        class="flex items-center gap-1.5 px-2 py-1.5 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
        title="<%= t('header.change_theme') %>"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
        </svg>
        <span class="text-xs" data-theme-target="currentTheme">Light</span>
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      <!-- Theme dropdown menu -->
      <div
        class="hidden absolute right-0 mt-1 w-48 rounded-lg shadow-lg bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)] py-1 z-50"
        data-theme-target="menu"
      >
        <!-- Menu items rendered by JavaScript -->
      </div>
    </div>
    <!-- Language Picker -->
    <div class="relative" data-controller="locale" data-locale-initial-value="<%= @config&.dig(:settings, 'locale') || I18n.locale %>">
      <button
        type="button"
        data-action="click->locale#toggle"
        class="flex items-center gap-1.5 px-2 py-1.5 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
        title="<%= t('header.change_language') %>"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
        </svg>
        <span class="text-xs" data-locale-target="currentLocale"><%= I18n.locale == :'pt-BR' ? 'Portugues' : 'English' %></span>
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      <!-- Language dropdown menu -->
      <div
        class="hidden absolute right-0 mt-1 w-48 rounded-lg shadow-lg bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)] py-1 z-50"
        data-locale-target="menu"
      >
        <!-- Menu items rendered by JavaScript -->
      </div>
    </div>
  </div>
</header>
